<% include ../partials/head %>
<link rel="stylesheet" type="text/css" href="/css/form.css">
<div class = "container masthead d-flex">
	<div class="wrapper">
		<form action="" method="post" action="/login" name="Login_Form" class="form-signin">       
		    <h3 class="form-signin-heading"><%= title %></h3>
			  <hr class="colorgraph"><br>
        <%if (!oth) { %>
          <div class="input">
            <input type="text" class="form-control" name="cogniId" placeholder="Cognizance ID" required="" autofocus="" />
          </div>
        <% } %>
        <%if (oth) { %>
          <input type="text"
            class="form-control"
            name="cogniId"
            placeholder="Cognizance ID"
            value=<%= cogniId %>
            required=""
            autofocus=""
            readonly 
          />
          <input type="password" class="form-control" name="hash" placeholder="One Time Hash" required=""/>     		  
        <% } %>
        <!-- <div class="input">
          <input type="password" placeholder="Password" name="password" required />
        </div> -->
        <br/>
			  <button class="btn btn-lg btn-primary btn-block"  name="Submit" value="Login" type="Submit">Login</button>  			
        <div class="input center-align" style="color: red;font-size: 15px">
          <%= msg %>
        </div>
        <%if (oth) { %>
          <a
          style="float: right; font-size: 0.8em; color: black; margin-top: 2px;"
          href="/oth"
          target="_blank"
        >What is OTH?</a>
        <% } %>
      </form>			
  </div>
  <div class="overlay"></div>
</div>
<script type="text/javascript" src="js/form.js"></script>